<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4">
  <div class="flex flex-col items-center justify-center">
    <%= link_to 'Notes',root_path,class:"font-medium text-3xl py-8" %>

    <div class="flex flex-col rounded-md items-center border border-black py-4 px-6">

      <h2 class="font-medium text-2xl mb-8">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="flex flex-col my-4 ">
          <%= f.label :email %>
          <%= f.email_field :email,class:"min-w-96 border border-black rounded-md focus:border-black h-10" %>
        </div>

        <div class="flex flex-col my-4 ">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, class:" min-w-96 border border-black rounded-md focus:border-black h-10"%>
        </div>

        <div class="flex flex-col my-4 ">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation,class:" min-w-96 border border-black rounded-md focus:border-black h-10" %>
        </div>

        <div class="flex flex-col my-6 items-center">
          <%= f.submit "Sign up",class:"w-min border border-black rounded-md px-6 py-2  hover:-ml-1 hover:-mt-1 hover:border-b-4 hover:border-r-4" %>
        </div>
      <% end %>

    </div>
    <div class="mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
