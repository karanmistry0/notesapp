
<% if user_signed_in? && @notes.count > 0 %>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pt-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-col-4 gap-6 " id="notes">
      <%= link_to new_note_path,class:"flex flex-col items-center place-content-center border border-dashed border-black rounded-md p-4 hover:border-solid hover:-ml-1 hover:-mb-1  hover:border-r-4 hover:border-b-4" do %>
        <div class="flex flex-col items-center place-content-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          Add new
        </div>
      <% end %>
      <% @notes.each do |note| %>
        <%= link_to note_path(note.id),class:"border border-black rounded-md p-4   #{note.color}  hover:-ml-1 hover:-mb-1 hover:border-r-4 hover:border-b-4" do%>
          <div >
            <p class="text-2xl"><%= note.title.truncate(24) %></p>
            <p class="text-sm text-gray-600"><%= note.created_at.strftime("%d %b %Y") %></p>
            <p class="mt-3 text-gray-800"><%= note.description.truncate(100) %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

<% else %>
  <%= render 'landing' %>
<% end %>


